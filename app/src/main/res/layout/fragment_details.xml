<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.detailsFragment"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dposter"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dposter"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textSize="30sp"
        tools:text="SampleText" />

    <RatingBar
        android:id="@+id/dratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dOverview"
        android:layout_marginTop="0dp"
        android:isIndicator="true"
        android:numStars="5" />

    <TextView
        android:id="@+id/dOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dTitle"
        android:layout_marginTop="0dp"
        android:text="TextView" />

    <Button
        android:id="@+id/dbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Trailer" />

    <Button
        android:id="@+id/fAdd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/dbut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Favorite" />

</RelativeLayout>